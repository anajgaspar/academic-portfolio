<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Projeto | <%= titulo %>
  </title>
  <%- include('partials/head') %>
  <link rel="stylesheet" href="/css/projetos-detalhes.css">
  <% if (typeof pageCss !== 'undefined') { %>
    <style>
      <%= pageCss %>
    </style>
  <% } %>
</head>

<body>
  <section id="projetos">
    <a href="/projetos" class="voltar">← Voltar aos projetos</a>
    <div class="projeto-header">
      <h2>
        <%= projeto.titulo %>
      </h2><span>-</span>
      <p>
        <%= projeto.semestre %>
      </p>
    </div>
  <img src="<%= embed(projeto.imagem) %>" alt="<%= projeto.titulo %>" class="projeto-imagem">
    <div class="descricao">
      <p><span class="titulo">Problema: </span>
        <%= projeto.problema %>
      </p>
      <p><span class="titulo">Solução: </span>
        <%= projeto.solucao %>
      </p>
    </div>
    <div class="contribuicoes">
      <h2>Minhas Contribuições</h2>
      <p><span class="titulo">Papel: </span>
        <%= projeto.papel %>
      </p>
      <p><span class="titulo">Ações: </span>
        <%= projeto.contribuicao %>
      </p>
    </div>
    <div class="tecnologias">
      <h2>Tecnologias utilizadas</h2>
      <ul>
        <% projeto.tecnologias.forEach(tec=> { %>
          <li class="tecnologia">
            <%= tec %>
          </li>
          <% }) %>
      </ul>
    </div>
    <div class="skills">
      <h2>Competências adquiridas</h2>
      <h4>Soft-skills adquiridas:</h4>
      <ul>
        <% if (projeto.softSkills) { %>
          <% projeto.softSkills.forEach(skill=> { %>
            <li class="skill">
              <%= skill %>
            </li>
          <% }) %>
        <% } %>
      </ul>
      <h4>Hard-skills adquiridas:</h4>
      <ul>
        <% if (projeto.hardSkills) { %>
          <% projeto.hardSkills.forEach(skill=> { %>
            <li class="skill">
              <%= skill %>
            </li>
          <% }) %>
        <% } %>
      </ul>
    </div>
    <div class="links">
      <h2>Links</h2>
      <% if (projeto.github) { %>
        <button>
          <a href="<%= projeto.github %>" target="_blank">Ver no GitHub</a>
        </button>
        <% } %>
          <% if (projeto.deploy) { %>
            <button>
              <a href="<%= projeto.deploy %>" target="_blank">Acessar deploy</a>
            </button>
            <% } %>
    </div>
  </section>
</body>

</html>