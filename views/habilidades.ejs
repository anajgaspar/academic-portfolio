<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CompetÃªncias</title>
    <%- include('partials/head') %>
    <link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
    <link rel="stylesheet" href="/css/habilidades.css">
        <% if (typeof pageCss !== 'undefined') { %>
        <style>
            <%= pageCss %>
        </style>
        <% } %>
</head>

<body>
    <%- include('partials/header') %>
        <section id="habilidades">
            <div>
                <h2>
                    <%= titulo %>
                </h2>
                <hr>
            </div>
            <h3 style="font-size: 30px">Soft-skills</h3>
            <div class="softSkills">
                <% softSkills.forEach(cat=> { %>
                    <div class="card-softSkills">
                        <p>
                            <%= cat.titulo %>
                        </p>
                    </div>
                <% }) %>
            </div>
            <h3 style="font-size: 30px">Hard-skills</h3>
            <div class="hardSkills">
                <% hardSkills.forEach(cat=> { %>
                    <div class="card-hardSkills">
                        <h3>
                            <%= cat.titulo %>
                        </h3>
                        <div class="tecnologias">
                            <% cat.tecnologias.forEach(tec=> { %>
                                <div class="tecnologia">
                                    <img src="<%= tec.icone %>" alt="<%= tec.nome %>">
                                    <p class="tec-nome"><%= tec.nome %></p>
                                    <p class="tec-nivel"><%= tec.nivel %></p>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
</body>

</html>